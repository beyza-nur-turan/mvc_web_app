@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">@Model.productName</h6>
            <div>
                <img class="img-fluid shadow rounded my-3" width="250" src="@Model.ImageUrl" />
                <p class="lead text-danger">@Model.price.ToString("c")</p>
            </div>

            <div class="text-center">
                <div class="btn-group">
                    <a href="/" class="btn btn-primary"><i class="fa-solid fa-house"></i> Home</a>
                    <form id="@Model.productId" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="productId"/>
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                    <button type="submit" class=" btn btn-outline-primary ">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                    </form>
                    <a href="/product" class="btn btn-outline-primary"><i class="fa-solid fa-list"></i> Products</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Header {
    <div>
        header for only get
    </div>
}