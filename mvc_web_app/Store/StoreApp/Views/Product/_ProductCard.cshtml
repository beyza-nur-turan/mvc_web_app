@model Product
<div class="col-sm-12 col-md-4 my-3">
    <div class="card h-100 d-flex flex-column">
        <img src="@Model?.ImageUrl" class="card-img-top h-100 d-flex flex-column" alt="...">
        <div class="card-body flex-fill">
            <h5 class="card-title">@Model.productName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
            <div class="btn btn-group">
                <form id="@Model.productId" class="btn btn-primary mt-auto mx-3" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="productId"/>
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                    <button style="width: 20px;height:25px;color:white;" type="submit"
                        class="btn btn-outline d-flex align-items-center justify-content-center"><i
                            class="fa fa-cart-plus"></i></button>
                </form>
                <a class="btn btn-primary mt-auto" href="/product/get/@Model.productId">Get details</a>
            </div>


        </div>
    </div>
</div>