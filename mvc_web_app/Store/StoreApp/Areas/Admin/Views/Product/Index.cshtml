@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Products</div>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-controller="Product" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (Product prd in Model)
                {
                    <tr>
                        <td>@prd.productId</td>
                        <td>@prd.productName</td>
                        <td>@prd.price.ToString("c")</td>
                        <td>
                            <div class="btn-group ">
                                
                                <a class="btn btn-warning mx-2" asp-action="Update" asp-route-id="@prd.productId">
                                    <i class="fa-solid fa-pen-to-square"></i>Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.productId">
                                    <i class="fa-solid fa-trash"></i>Delete</a>
                                <a class="btn btn-info mx-2" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.productId">
                                    <i class="fa fa-search"></i>Ön İzleme</a>

                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>No products available.</p>
            }

        </tbody>
    </table>
</div>