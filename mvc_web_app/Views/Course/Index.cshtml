@using MVC_WEB_APP.Models
@model IEnumerable<Candidate>
@if (Model.Count() > 0)
{
    <h4>
        Applications(@Model.Count())

    </h4>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th> E-Mail</th>
                <th>Apply At</th>
                <th>Selected Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <td>@candidate.FullName</td>
                    <td>@candidate.Email</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="alert alert-info">
        There is no application. Please click here to <a class="alert-link" asp-controller="Course"
            asp-action="Apply">apply</a>
    </div>
}